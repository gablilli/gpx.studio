{
  "extends": "./.svelte-kit/tsconfig.json",
  {
  "compilerOptions": {
    "target": "ES2020",              // JS moderno con flatMap, includes, Object.entries
    "module": "commonjs",            // per Node.js
    "lib": ["ES2020", "DOM"],        // include le funzioni moderne + DOM se serve
    "outDir": "dist",                // dove mettere i file compilati
    "rootDir": "src",                // cartella sorgente
    "strict": true,                  // controlli TypeScript più rigidi
    "esModuleInterop": true,         // compatibilità con import di CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,            // evita errori su tipi di librerie esterne
    "types": ["node", "geojson"],    // tipi inclusi
    "resolveJsonModule": true        // permette import di file JSON
  },
  "include": ["src/**/*.ts"],        // tutti i file TS nella cartella src
  "exclude": ["node_modules", "dist"]
}
